{
  "name": "drizzle-llm",
  "version": "0.0.2",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "drizzle-llm": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./runtime": {
      "import": "./dist/runtime/index.js",
      "types": "./dist/runtime/index.d.ts"
    },
    "./runtime/template-tag": {
      "import": "./dist/runtime/template-tag.js",
      "types": "./dist/runtime/template-tag.d.ts"
    }
  },
  "scripts": {
    "build": "./node_modules/typescript/bin/tsc",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "validate": "tsx src/validate.ts",
    "claude": "claude",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --write ."
  },
  "license": "MIT",
  "description": "LLM build query using Drizzle ORM",
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "drizzle-orm": "^0.44.2",
    "glob": "^11.0.3",
    "ts-morph": "^26.0.0"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^1.0.22",
    "@anthropic-ai/sdk": "^0.54.0",
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.0.0",
    "openai": "^5.3.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-mcp": "^0.0.12",
    "vite": "^6.3.5",
    "vitest": "^3.2.3"
  }
}
